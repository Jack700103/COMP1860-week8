CHIP Counter {
    IN inc, reset;
    OUT out[4];

    PARTS:
    Register(in=nextVal, load=load, out=currentVal);
    SubBus(in=currentVal, out=out, start=0, end=3);
    Inc16(in=currentVal, out=incrementedVal);
    Or(a=inc, b=reset, out=load);

    Mux16(a=incrementedVal, b[0..15]=false, sel=reset, out=nextVal);
}